<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: "Montserrat", sans-serif;
    }
    a{
        text-decoration:none;
    }
    .headerContainer {
        width: 100%;
        background: #fff0f0;
    }

    .headerTop, .headertop-left, .headertop-right, .item, .headerBottom {
        display: flex;
    }

    .headerTop, .headertop-left {
        width: 100%;
        justify-content: space-between;
    }

    .headerTop {
        padding: 1rem;
    }

    .headertop-left {
        width: 50%;
    }

    .headertop-right {
        display: flex;
        justify-content: center;
        gap: 1rem;
        width: 50%;
    }

    .item {
        width: 50%;
    }

    .icon {
        width: 20%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .icon img {
            height: 60%;
        }

    .itemContent {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

        .itemContent a {
            text-decoration: none;
        }
    /*  */
    .nav {
        height: 100%;
        display: flex;
        gap: 0;
    }

    .dropbtn {
        background: none;
        padding: 16px;
        font-size: 16px;
        border: none;
    }

        .dropbtn:hover {
            background-color: #1f1554ce;
            color: white;
        }

    .dropdown {
        position: relative;
        display: inline-block;
        height: 100%;
    }

    .dropbtn {
        height: 100%;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #ddd;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #3e8e41;
    }

    .headerBottom {
        height: 7rem;
        align-items: center;
    }

    .logo {
        width: 20%;
        display: flex;
        justify-content: center;
    }

        .logo img {
            height: 7rem;
        }
</style>
